<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: 'Inicio'}) %>

<body>

    <!-- Header (Navs) -->
    <%- include('partials/header') %>

    <div class="container-fluid pb-0 pl-5 pr-5 pt-5">
        <!-- Slider -->

    <%- include('partials/slider') %>

    

        <div class="container-ofertas">
            <div class="product-section-1">
                <!-- Products View Left -->
            <div class="product-section__portrays">
                    <div class="product-section__box">
                        <% let primerDescuento =  Math.floor(Math.random() * discounts.length) %> 
                        <article>
                            <% for(let k = 0; k < discounts[primerDescuento].games.images.length; k++) { %>
                                <%  if( discounts[primerDescuento].games.images[k].location == "default" ){ %>
                                            <img src="../../img/uploads/productsImage/<%= discounts[primerDescuento].games.images[k].img_url %>" alt="imagen/miniatura">
                                            <div class="product-section__data">
                                                <p class="product-section__description"><%= discounts[primerDescuento].games.description %></p>
                                                <p class="product-section__price">$<%= ((discounts[primerDescuento].games.price - (discounts[primerDescuento].percentage_discount * discounts[primerDescuento].games.price) / 100)).toFixed(2) %></p>
                                                <a class="product-section__more-info" href="/product/detail/<%=discounts[primerDescuento].games.id %>">ver mas</a>
                                                <form  class="" action="/user/cart/<%=locals.localUser!= undefined ? locals.localUser.id: '0'%>?_method=post" method="POST">
                                                    <input name="juego" class="boton-imagen" value="<%=discounts[primerDescuento].games.id %>">
                                                    <button class="product-section__shopping-cart" type="submit"><i class="fas fa-shopping-cart"></i></button>
                                                </form>
                                                <a class="product-section__buy-button" href="/user/buyFormChoose">BUY</a>
                                            </div>
                                <% } %>
                            <% } %>
                        </article>
                        <div class="cartel-oferta">
                            <p> <%=discounts[primerDescuento].percentage_discount%>% OFF<p>
                        </div>
                    </div>
                
            <div class="product-section__horizontal-boxes">
                <div class="product-section__horizontal-boxes">
                    
                    <% let segundoDescuento =  Math.floor(Math.random() * discounts.length) %> 
