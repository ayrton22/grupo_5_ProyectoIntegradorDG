                                                    <form  class="" action="/user/cart/<%=locals.localUser!= undefined ? locals.localUser.id: '0'%>?_method=post" method="POST">
                                                        <input name="juego" class="boton-imagen" value="<%=discounts[segundoDescuento].games.id %>">
                                                        <button class="product-section-horizontal__shopping-cart" type="submit"><i class="fas fa-shopping-cart"></i></button>
                                                    </form>
                                                    <a class="product-section-horizontal__buy-button" href="/user/buyFormChoose">BUY</a>
                                                </div>
                                            <% } %>
                                        <% } %>
                                    </aarticle>
                                    <div class="cartel-oferta__horizontal">
                                        <p><%= discounts[segundoDescuento].percentage_discount %>% OFF<p>
                                    </div>
                                </div>
                                <% let tercerDescuento =  Math.floor(Math.random() * discounts.length) %> 
                                <% while(tercerDescuento == segundoDescuento || tercerDescuento == primerDescuento){ %>
                                    <%   tercerDescuento =  Math.floor(Math.random() * discounts.length) %>
                                    <% } %>
                                <div class="product-section__box--horizontal ">
                                    <article>
                                        <% for(let k = 0; k <discounts[tercerDescuento].games.images.length; k++) { %>
                                            <%  if( discounts[tercerDescuento].games.images[k].location == "imagen_horizontal" ){ %>
                                                <img src="../../img/uploads/productsImage/<%=discounts[tercerDescuento].games.images[k].img_url %>" alt="imagen/miniatura">
                                                <div class="product-section-horizontal__data">
                                                    <p class="product-section-horizontal__description"><%= discounts[tercerDescuento].games.description %></p>
                                                    <p class="product-section-horizontal__price">$<%= ((discounts[tercerDescuento].games.price - (discounts[primerDescuento].percentage_discount * discounts[tercerDescuento].games.price) / 100)).toFixed(2) %></p>
                                                    <a class="product-section-horizontal__more-info" href="/product/detail/<%=discounts[tercerDescuento].games.id %>">ver mas</a>
                                                    <form  class="" action="/user/cart/<%=locals.localUser!= undefined ? locals.localUser.id: '0'%>?_method=post" method="POST">
                                                        <input name="juego" class="boton-imagen" value="<%=discounts[tercerDescuento].games.id %>">
                                                        <button class="product-section-horizontal__shopping-cart" type="submit"><i class="fas fa-shopping-cart"></i></button>
                                                    </form>
                                                    <a class="product-section-horizontal__buy-button" href="/user/buyFormChoose">BUY</a>
                                                </div>
                                            <% } %>
                                        <% } %>
                                    </article>
                                    <div class="cartel-oferta__horizontal">
                                        <p><%= discounts[tercerDescuento].percentage_discount %>% OFF<p>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="product-section-2">
            <!-- Products View Right -->
            <div class="product-section-2__portrays">
                <% for(let i = 0; i < allCategories.length; i++){ %>
                    <%  if(allCategories[i].name == "Featured" ){ %>
